@import 'nib'
@import 'nib/gradients'

#container
    margin: 2em auto
    text-align: center
#tweet_list
  margin 1em auto
  padding 0
  max-width 600px
  li
    transition all .4s
    opacity 1
    transform scale(1)
    padding .4em
    list-style none
    margin 2em auto
  *.hidden
    transition all .8s
    transform scale(1.05)
    opacity 0
  img
    display block
    transition all .3s
    transform scale(1)
    margin 1em auto